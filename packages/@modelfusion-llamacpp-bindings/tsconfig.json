{
  "compilerOptions": {
    "declaration": true,
    "lib": ["esnext"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.ts"],
}
